{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "compilerOptions": {
    "lib": ["deno.window", "dom", "dom.iterable", "dom.asynciterable"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing": "jsr:@std/testing@1",
    "golikejs/context": "npm:golikejs@^0.4.0/context",
    "golikejs/sync": "npm:golikejs@^0.4.0/sync"
  },
  "tasks": {
    "test": "deno test --allow-all",
    "test:watch": "deno test --allow-all --watch",
    "coverage": "deno test --allow-all --coverage=cov && deno coverage cov",
    "coverage:html": "deno test --allow-all --coverage=cov && deno coverage --html cov"
  },
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "cov",
    ".vitest-cache",
    ".git",
    "temp",
    "etc",
    ".pnp.cjs",
    "package.json",
    "package-lock.json",
    "pnpm-lock.yaml"
  ],
  "test": {
    "include": ["src/**/*_test.ts"]
  }
}

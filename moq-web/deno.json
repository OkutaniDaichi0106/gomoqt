{
	"$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
	"name": "@okudai/moq",
	"version": "0.4.0",
	"exports": {
		".": "./src/mod.ts"
	},
	"license": "MIT",
	"compilerOptions": {
		"lib": ["ESNext", "deno.ns", "DOM", "dom.iterable", "dom.asynciterable"],
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"verbatimModuleSyntax": false
	},
	"imports": {
		"@okudai/golikejs": "jsr:@okudai/golikejs@^0.5.2",
		"@std/assert": "jsr:@std/assert@1",
		"@std/cli": "jsr:@std/cli@1",
		"@std/path": "jsr:@std/path@^1.1.2",
		"@std/testing": "jsr:@std/testing@1"
	},
	"tasks": {
		"test": "deno test --allow-all",
		"test:watch": "deno test --allow-all --watch",
		"coverage": "deno test --allow-all --coverage=cov && deno coverage cov",
		"coverage:html": "deno test --allow-all --coverage=cov && deno coverage --html cov",
		"fmt": "deno fmt",
		"fmt:check": "deno fmt --check",
		"lint": "deno lint",
		"check": "deno check src/**/*.ts",
		"interop": "deno run --allow-run --allow-read --allow-net cli/interop/run_secure.ts",
		"interop:insecure": "deno run --unstable-net --allow-all --unsafely-ignore-certificate-errors cli/interop/main.ts"
	},
	"fmt": {
		"useTabs": true,
		"lineWidth": 100,
		"indentWidth": 4,
		"semiColons": true,
		"singleQuote": false,
		"proseWrap": "preserve"
	},
	"lint": {
		"rules": {
			"tags": ["recommended"],
			"exclude": [
				"require-await",
				"no-unused-vars",
				"no-explicit-any",
				"no-await-in-sync-fn",
				"no-redeclare"
			]
		}
	},
	"exclude": [
		".git",
		"coverage/",
		"cov/",
		"temp/"
	],
	"test": {
		"include": ["src/**/*_test.ts"]
	}
}

{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["dom", "es2024"],
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "./dist-test",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["jest", "node"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples"
  ]
}
